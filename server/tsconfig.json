{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "types": ["node"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
